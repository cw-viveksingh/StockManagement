@model IEnumerable<UsedStockManagement.Models.UsedCarStock>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="~/Scripts/script.js"></script>

@if (Model.Count() == 0)
{
    <div>
        No search Result Found!!!
    </div>
}
<ul style="list-style:none; padding:0px;">
    @for (int i = 0, count = (Model.Count() == 5) ? 4 : Model.Count(); i < count; i++)
    {
        var obj = Model.ElementAt(i);
        <li>
            <table border="0">
                <colgroup>
                    <col width="300" />
                    <col width="50" />
                    <col width="100" />
                    <col width="100" />
                    <col width="100" />
                </colgroup>
                <tr>
                    <td rowspan="3" align="center">
                        <img src="~/Images/@String.Format("medium-{0}{1}",@obj.StockId,".jpg")" alt="car image" style="width:230px;height:150px;" />
                    <td></td>
                    <td colspan="2" align="left"> @obj.Make @obj.Model @obj.Version</td>
                    <td class="car_id" hidden>@obj.StockId</td>
                </tr>
                <tr>
                    <td></td>
                    <td colspan="2" align="left">$ @obj.Price </td>
                    <td align="center">@obj.City</td>
                </tr>
                <tr>
                    <td></td>
                    <td align="left">@obj.Kilometer km </td>
                    <td>@obj.FuelType</td>
                    <td align="center">@obj.Year</td>
                </tr>
            </table>
            <button class="search" type="button">Get Details</button>
            <br />
        </li>
    }
</ul>
@if (Model.Count() < 5)
{
    <script>
        $('#nextResult').prop('disabled', true);
    </script>
}


